#!/bin/bash

# Cleanup Script generated by Ansible
LOG_DIR="{{ log_cleanup_path }}"
RETENTION_DAYS={{ log_retention_days }}

if [ ! -d "$LOG_DIR" ]; then
    echo "Directory $LOG_DIR does not exist. Creating..."
    mkdir -p "$LOG_DIR"
fi

echo "Deleting .log files older than $RETENTION_DAYS days in $LOG_DIR..."
find "$LOG_DIR" -type f -name "*.log" -mtime +$RETENTION_DAYS -exec rm -f {} \;

echo "Cleanup completed."

